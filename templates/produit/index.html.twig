{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1 class="h1-p">Produits dispo</h1>

    <div class="container">
        <div>
            <form action="{{ path('filter') }}" method="POST">
                {% for categorie in categories %}
                    <label><input type="checkbox" name="taille[]" value="{{ categorie.id }}">{{ categorie.libelle }}</label>
                {% endfor %}
                <input type="submit" value="Rechercher" name="submit">
                {% if app.request.request.all is not empty %}
                    <a href="{{ path('produit_index') }}" class="btn btn-dark">Annuler</a>
                {% endif %}
            </form>
        </div>
        <table class="table">
            <thead class="bg-dark text-light">
            <tr  class="text-center">
                <th>Aper√ßu</th>
                <th>Type de Board</th>
                <th>Nom du Produit</th>
                <th>Tarif</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr class="text-center">
                    <td><img src="{{ asset('')~produit.image }}" width="100" height="100"></td>
                    <td>{{ produit.idcategorie.libelle }}</td>
                    <td>{{ produit.libelle }}</td>
                    <td>{{ produit.tarif }}</td>
                    <td>
                        <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info">show</a>
                        <a href="{{ path('produit_add', {'id': produit.id}) }}" class="btn btn-warning">+</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
