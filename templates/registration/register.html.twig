{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <div class="container" style="margin-top: 10%; width: 30%;">
        <div class="shadow-lg p-3 mb-5 bg-body rounded" style="background: #1b373d; color: white">
            <h1 class="h3 mb-3 font-weight-normal text-bck">Inscivez vous</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email)}}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="btn btn-lg text-bck">S'enregistrer</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
