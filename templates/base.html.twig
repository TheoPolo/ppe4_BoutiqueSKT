<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {% block head_css %}
            <link rel="stylesheet" href="{{ asset('style.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        {% endblock %}
        {% block head_js %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        {% endblock %}

    </head>
    <body>
    {% block navbar %}
        <nav class="navbar navbar-expand-lg shadow-lg p-3 mb-5 bg-body" style="background: #22454c;">
            <a class="navbar-brand text-bck" href="#" >SKThéo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                    aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link text-bck" href="{{ path("accueil") }}">Accueil <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-bck" href="{{ path("categorie_index") }}">Categories <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <ul class="navbar-nav mt-2 mt-lg-0 mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-bck" href="{{ path("produit_index") }}">Produit <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <div class="dropdown">
                    <button class="btn  dropdown-toggle bg-transparent text-bck" style="margin-right: 4em; background: white; color: black" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Menu
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <form class="form-inline my-2 my-lg-0">
                                <a class="btn dropdown-item" href="{{ path("panier_index") }}" > Panier {{ app.session.get("les_produits")|length }}<span class="sr-only">(current)</span></a>
                            {% if not is_granted('ROLE_USER') %}
                                <a href="{{ path('app_register') }}" class="btn dropdown-item">S'inscrire</a>
                                <a href="{{ path("app_login") }}" class="btn  dropdown-item">Se connecter</a>
                            {% else %}
                                <a href="{{ path("app_logout") }}" class="btn  dropdown-item">Se déconnecter</a>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path("admin") }}" class="btn  dropdown-item">Pannel</a>
                            {% endif %}
                        </form>
                    </div>

                </div>

            </div>
        </nav>
    {% endblock %}

    {% block body %}

    {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
